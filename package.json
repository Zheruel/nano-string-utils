{
  "name": "nano-string-utils",
  "version": "0.28.0",
  "description": "Modern string utilities with zero dependencies. Tree-shakeable (<1KB each), TypeScript-first, type-safe. Validation, XSS prevention, case conversion, fuzzy matching & more.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.iife.js",
  "jsdelivr": "./dist/index.iife.js",
  "browser": {
    "./dist/index.cjs": "./dist/index.js"
  },
  "bin": {
    "nano-string": "./bin/nano-string.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "npm run build && vitest run --coverage",
    "bench": "vitest bench",
    "bench:data": "npm run build && npx tsx benchmarks/bundle-size.ts && npx tsx benchmarks/performance-benchmarks.ts",
    "typecheck": "tsc --noEmit",
    "docs:dev": "cd docs-src && npm run dev",
    "docs:build": "cd docs-src && npm run build",
    "docs:preview": "cd docs-src && npm run preview",
    "size": "size-limit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zheruel/nano-string-utils.git"
  },
  "keywords": [
    "string",
    "text",
    "utilities",
    "string-utils",
    "string-manipulation",
    "text-processing",
    "string-library",
    "text-utils",
    "case-conversion",
    "slugify",
    "camelCase",
    "kebabCase",
    "snakeCase",
    "pascalCase",
    "tree-shakeable",
    "zero-dependencies",
    "typescript",
    "type-safe",
    "email-validation",
    "url-validation",
    "form-validation",
    "input-validation",
    "sanitize",
    "sanitization",
    "string-sanitization",
    "xss-prevention",
    "xss",
    "html-escape",
    "fuzzy-match",
    "levenshtein",
    "lightweight",
    "tiny",
    "minimal",
    "bundle-size",
    "performance",
    "esm",
    "lodash-alternative",
    "lodash-replacement",
    "unicode",
    "pluralize"
  ],
  "author": "Tin Zeljar <tinzeljar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zheruel/nano-string-utils/issues"
  },
  "homepage": "https://zheruel.github.io/nano-string-utils/",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/bun": "^1.3.6",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "es-toolkit": "^1.44.0",
    "esbuild": "^0.27.2",
    "lodash": "^4.17.21",
    "size-limit": "^12.0.0",
    "tinybench": "^6.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "12 KB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "12.5 KB"
    }
  ]
}
