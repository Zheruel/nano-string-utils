{
  "name": "nano-string-utils",
  "version": "0.3.0",
  "description": "Ultra-lightweight string utilities with zero dependencies",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc --out docs src/index.ts",
    "size": "size-limit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zheruel/nano-string-utils.git"
  },
  "keywords": [
    "string",
    "utils",
    "utilities",
    "lightweight",
    "zero-dependencies",
    "slugify",
    "camelCase",
    "snakeCase",
    "typescript"
  ],
  "author": "Tin Zeljar <tinzeljar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zheruel/nano-string-utils/issues"
  },
  "homepage": "https://github.com/Zheruel/nano-string-utils#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "size-limit": "^11.2.0",
    "tinybench": "^5.0.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "5 KB"
    }
  ]
}
