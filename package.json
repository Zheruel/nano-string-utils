{
  "name": "nano-string-utils",
  "version": "0.10.0",
  "description": "Ultra-lightweight string utilities with zero dependencies",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:perf": "vitest bench benchmarks/performance.bench.ts",
    "bench:size": "tsx benchmarks/bundle-size.ts",
    "bench:all": "tsx benchmarks/run-benchmarks.ts",
    "typecheck": "tsc --noEmit",
    "docs:dev": "cd docs-src && npm run dev",
    "docs:build": "cd docs-src && npm run build",
    "docs:preview": "cd docs-src && npm run preview",
    "size": "size-limit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zheruel/nano-string-utils.git"
  },
  "keywords": [
    "string",
    "utils",
    "utilities",
    "lightweight",
    "zero-dependencies",
    "slugify",
    "camelCase",
    "snakeCase",
    "typescript"
  ],
  "author": "Tin Zeljar <tinzeljar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zheruel/nano-string-utils/issues"
  },
  "homepage": "https://github.com/Zheruel/nano-string-utils#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "es-toolkit": "^1.39.10",
    "esbuild": "^0.25.9",
    "lodash": "^4.17.21",
    "size-limit": "^11.2.0",
    "tinybench": "^5.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "6.5 KB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "6.5 KB"
    }
  ]
}
